# Gitea Configuration
GITEA_DOMAIN=localhost
GITEA_HTTP_PORT=3555
GITEA_SSH_PORT=4555

# Security Settings
GITEA_DISABLE_REGISTRATION=false
GITEA_REQUIRE_SIGNIN=false
GITEA_INSTALL_LOCK=true

# Mail Configuration (Optional)
GITEA_MAILER_ENABLED=false
GITEA_MAILER_FROM=gitea@localhost
GITEA_MAILER_HOST=smtp.gmail.com:587
GITEA_MAILER_USER=your-email@gmail.com
GITEA_MAILER_PASSWD=your-app-password

# Database Configuration (SQLite)
GITEA_DB_TYPE=sqlite3
GITEA_DB_PATH=/data/gitea/gitea.db

# Additional Settings
TZ=Asia/Seoul